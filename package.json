  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc}": [
      "biome check --write"
    ]
  },
  "keywords": [
    "thai",
    "wordcut",
    "word-breaker",
    "segmentation",
    "nlp",
    "thai-language",
    "text-processing"
