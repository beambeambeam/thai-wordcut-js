{
  "name": "thai-wordcut-js",
  "version": "1.0.0",
  "description": "Thai word breaker/segmentation library for Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "lint-staged": "lint-staged",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "biome:ci": "biome ci .",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc}": [
      "biome check --write"
    ]
  },
  "keywords": [
    "thai",
    "wordcut",
    "word-breaker",
    "segmentation",
    "nlp",
    "thai-language",
    "text-processing"
  ],
  "author": {
    "name": "beambeambeam",
    "email": "supawitmarayat@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beambeambeam/thai-wordcut-js.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vitest": "^4.0.8"
  }
}
