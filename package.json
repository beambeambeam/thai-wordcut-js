{
  "name": "thai-wordcut-js",
  "version": "1.0.0",
  "description": "Thai word breaker/segmentation library for Node.js",
  "main": "wordcut.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "lint-staged": "lint-staged",
    "lint": "biome check .",
