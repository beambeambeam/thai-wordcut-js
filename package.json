  "author": {
    "name": "beambeambeam",
    "email": "supawitmarayat@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beambeambeam/thai-wordcut-js.git"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "underscore": "^1.13.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
